<!DOCTYPE html>
<html>
    <head>
    {% block head %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Homepage{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    {% endblock %}
    </head>
    <body class="container mx-auto">
        <div id="navigation">
        {% block navigation %}
            <div class="mar-bot-halfem">
                <img src="img/logo.jpg" alt="logo"><br>
                <strong>SUPER KEBAB</strong><br>
                najlepsze kebaby
            </div>
            <nav class="navbar navbar-expand-sm navbar-light justify-content-center" style="background-color: #e3f2fd;">
                <a class="navbar-brand" href="#"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('index') }}">Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('about') }}">O nas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('menu') }}">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('open') }}">Godziny Otwarcia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        </div>

        <div id="body" class="centered mt-3">
            {% block body %}{% endblock %}
        </div>

        <footer class="centered mt-5 col-12 float-left">
            <a href="https://www.facebook.com"><img src="https://static.wixstatic.com/media/0fdef751204647a3bbd7eaa2827ed4f9.png/v1/fill/w_27,h_27,al_c,q_85,usm_0.66_1.00_0.01/Facebook.webp" alt="facebook icon"></a>
            <a href="https://www.instagram.com"><img src="https://static.wixstatic.com/media/01c3aff52f2a4dffa526d7a9843d46ea.png/v1/fill/w_27,h_27,al_c,q_85,usm_0.66_1.00_0.01/Instagram.webp" alt="instagram icon"></a>
            <a href="https://www.google.pl/maps/@50.0621764,19.9376951,15z"><img src="https://static.wixstatic.com/media/390db90c2cec42d58bd3203fc21fe12e.png/v1/fill/w_27,h_27,al_c,q_85,usm_0.66_1.00_0.01/Google%20Places.webp" alt="google maps icon"></a>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
